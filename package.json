{
  "name": "nodejs-project-template",
  "version": "1.0.0",
  "description": "Seed repo for Node.js projects",
  "main": "dist/index.js",
  "author": "Adam Yeats <ay@xadamy.xyz>",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w --preserveWatchOutput",
    "dev": "concurrently \"npm:start:debug\" \"npm:build:watch\"",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "start:debug": "NODE_ENV=development DEBUG=nodejs-project-template:* nodemon dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^18.15.3",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.5",
    "ts-jest": "^27.1.4",
    "typescript": "^4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "prettier --write"
  },
  "volta": {
    "node": "14.18.0",
    "npm": "7.24.1"
  }
}
